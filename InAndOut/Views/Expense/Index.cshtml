@model IEnumerable<InAndOut.Models.Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My Expenses List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="Expense" asp-action="Create">Add an expense</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th scope="col">Expense name</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Changes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                <tr>
                    <td width="40%">@expense.ExpenseName</td>
                    <td width="40%">@expense.Amount</td>
                    <td width="30%">
                        <div class="w-100 btn-group" role="group" >
                            <a class="btn btn-primary mx-1" asp-controller="Expense" asp-route-Id="@expense.Id" asp-action="UpdateGet">Update</a>
                            <a class="btn btn-danger mx-1" asp-controller="Expense" asp-route-Id="@expense.Id" asp-action="DeleteGet">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No expenses added yet</p>
    }

</div>
